import java.util.*;

class Main{
    public static void main(String args[]){
        System.out.println("This Program for find sum of digit");
        
        int a,sum=0;
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter Number Here");
        a=sc.nextInt();
        
        while(a>0){
            sum=sum+a%10;
            a=a/10;
        }
        System.out.println("Sum of digits is :"+sum);
    }
}
